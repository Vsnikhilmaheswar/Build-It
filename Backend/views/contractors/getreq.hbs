<script>
    document.addEventListener('DOMContentLoaded', function() {
        const date1Input = document.querySelector('input[name="date1"]');
        const date2Input = document.querySelector('input[name="date2"]');
        const submitButton = document.querySelector('button[type="submit"]');

        date1Input.addEventListener('change', updateSubmitButton);
        date2Input.addEventListener('change', updateSubmitButton);

        function updateSubmitButton() {
            const date1 = new Date(date1Input.value);
            const date2 = new Date(date2Input.value);
            const today = new Date();

            if (date1 < today || date1 >= date2) {
                submitButton.disabled = true;
                submitButton.style.opacity = 0.5;
            } else {
                submitButton.disabled = false;
                submitButton.style.opacity = 1;
            }
        }
    });
</script>

