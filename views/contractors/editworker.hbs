<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit worker</h2>
                <form action="/c/editworker/{{product._id}}" method="POST" enctype="multipart/form-data">
                  
                   <label for=""> first Name</label>
                    <input type="text" name="fName" class="form-control" value="{{product.fName}}">

                    <label for="">last Name</label>
                    <input type="text" name="lName" class="form-control" value="{{product.lName}}">
                  
                  <label for="">job Location</label>
                    <input type="text" name="jobLocation" class="form-control" value="{{product.jobLocation}}">

                    <label for="">address</label>
                    <input type="text" name="address" class="form-control" value="{{product.address}}">

                    <label for="">years of experience</label>
                    <input type="text" name="YOE" class="form-control" value="{{product.YOE}}">

                    <label for="">qualification</label>
                    <input type="text" name="qualification" class="form-control" value="{{product.qualification}}">

                    <label for="">email</label>
                    <input type="text" name="email" class="form-control" value="{{product.email}}">
               
                    <label for="">Phone</label>
                    <input type="text" name="phone" class="form-control" value="{{product.Phone}}">

                    <label for="">additional info</label>
                    <input type="text" name="additionalinfo" class="form-control" value="{{product.additionalinfo}}">

                    <button type="submit" class="btn btn-success mt-5">Submit</button>
                </form>
            </div>
        </div>
    </div>
   </div>
</section>
